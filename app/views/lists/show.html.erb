<h1><%= @list.name %></h1>
<% @bookmarks.each do |bookmark| %>
  <h2><%= bookmark.movie.title %></h2>
  <%= image_tag bookmark.movie.poster_url, alt: "text" %>
  <p><%= bookmark.comment %></p>
  <%= link_to "Watched!", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
